<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorTextSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>

    <style name="TituloExpandido" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TituloCollapsed">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppProgressDialog">
        <item name="colorAccent">@color/colorPink</item>
        <item name="android:textColorPrimary">@color/colorNavyBlue</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:background">@color/colorPureWhite</item>
    </style>

</resources>
